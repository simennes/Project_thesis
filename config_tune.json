{
  "study_name": "gcnrs_sparrow_tpe",
  "storage": null,
  "n_trials": 60,
  "timeout_seconds": null,
  "n_jobs": 1,
  "show_progress_bar": true,

  "n_startup_trials": 10,
  "pruner_startup_trials": 5,
  "pruner_warmup_epochs": 5,

  "base_train": {
    "seed": 42,
    "paths": {
      "npz": "Data/gnn/snp_pheno_ALL.npz",
      "snp_feather": "Data/gnn/SNP/ALL/snp_export_body_mass_ALL_geno.feather",
      "phenotype_csv": "Data/gnn/adjusted_body_mass.csv",
      "id_column": "ringnr",
      "output_dir": "outputs/tuning_runs"
    },
    "target_column": "y_adjusted",
    "standardize_features": false,

    "graph": {
      "source": "snp",
      "knn_k": 3,
      "weighted_edges": false,
      "symmetrize_mode": "mutual",
      "self_loops": true,
      "laplacian_smoothing": true,
      "val_fraction": 0.10,
      "test_fraction": 0.10,
      "ensemble_models": 1
    },

    "model": {
      "hidden_dims": [128, 64],
      "dropout": 0.5,
      "batch_norm": true
    },

    "training": {
      "optimizer": "adam",
      "lr": 0.0001,
      "weight_decay": 0.0,
      "epochs": 80,
      "patience": 15
    }
  },

  "search_space": {
    "model": {
      "hidden_dims_choices": [[128, 64], [256, 128], [256, 64], [64, 64]],
      "dropout_range": [0.1, 0.6]
    },
    "graph": {
      "knn_k_range": [3, 10],
      "symmetrize_mode_choices": ["mutual", "union"],
      "laplacian_smoothing_choices": [true, false],
      "ensemble_models_range": [1, 8]
    },
    "training": {
      "lr_loguniform": [0.00001, 0.01],
      "wd_loguniform": [1e-7, 0.001],
      "epochs": [20, 300],
      "patience": 20
    },
    "feature_selection": {
      "use_snp_selection_choices": [false, true],
      "num_snps_range": [1000, 61000],
      "num_snps_step": 2000
    }
  }
}
