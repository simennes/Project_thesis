{
  "seed": 42,

  "paths": {
    "npz": "Data/gnn/snp_pheno_ALL.npz",
    "snp_feather": "Data/gnn/SNP/ALL/snp_export_body_mass_ALL_geno.feather",
    "phenotype_csv": "Data/gnn/adjusted_body_mass.csv",
    "id_column": "ringnr",
    "output_dir": "outputs/snp_lap_ensemble"
  },

  "target_column": "y_adjusted",
  "standardize_features": false,

  "graph": {
    "source": "snp",
    "knn_k": 3,
    "weighted_edges": false,
    "symmetrize_mode": "mutual",
    "self_loops": true,
    "laplacian_smoothing": true,
    "val_fraction": 0.10,
    "test_fraction": 0.10,
    "ensemble_models": 1,
    "use_aggregator": false
  },

  "model": {
    "hidden_dims": [128, 64],
    "dropout": 0.5,
    "batch_norm": true
  },

  "training": {
    "optimizer": "adam",
    "lr": 0.00001,
    "weight_decay": 0.0,
    "epochs": 400,
    "patience": 40,
    "aggregate_epochs": 10,
    "log_every": 5
  }
}
